<lib:BaseWindow x:Class="Careful.Controls.MessageBoxControl.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lib="clr-namespace:Careful.Controls.WindowBaseControl"
        xmlns:local="clr-namespace:Careful.Controls.MessageBoxControl"
        Background="White" WindowStartupLocation="CenterOwner" WindowCornerRadius="3"
	Width="340" Height="240">
    <Grid>
        <local:MessageBox x:Name="mb" Close="MessageBox_Close" TitlePath="{Binding LogoPath}" Title="{Binding Title}" Message="{Binding Message}" MessageType="{Binding MessageBoxType}"></local:MessageBox>
    </Grid>
</lib:BaseWindow>
