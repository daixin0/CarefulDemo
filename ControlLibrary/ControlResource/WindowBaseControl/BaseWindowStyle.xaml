    <Style x:Key="PathButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="BorderThickness" Value="0"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"></ContentPresenter>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Opacity" Value="0.6"></Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <DropShadowEffect x:Key="ShadowWindow" Color="Gray" Direction="270" ShadowDepth="1" BlurRadius="8" Opacity="0.6"/>


    <Style x:Key="BaseWindowStyle" TargetType="{x:Type window:BaseWindow}">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="AllowsTransparency" Value="True" />
        <!--<Setter Property="ResizeMode" Value="NoResize" />-->
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type window:BaseWindow}">
                    <Grid Name="WindowGrid">
                        <Grid Name="grid" Margin="5" Effect="{StaticResource ShadowWindow}">
                            <!--  内容  -->
                            <Border BorderThickness="0" BorderBrush="#FFE2E2E2" Background="{TemplateBinding Background}" CornerRadius="{Binding WindowCornerRadius,RelativeSource={RelativeSource AncestorType=Window}}">
                                <Grid>
                                    <Border Name="borderTitle"
                                Height="{Binding TitleHeight,RelativeSource={RelativeSource AncestorType={x:Type window:BaseWindow}}}"
                                VerticalAlignment="Top" Panel.ZIndex="1"
                                Background="Transparent">
                                    </Border>
                                    <StackPanel HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal" Margin="0,8,20,0" Panel.ZIndex="1" Height="20">

                                        <Button x:Name="btnMin" Focusable="False" Foreground="#FF878787" Width="16" Height="16" Margin="5 0" Visibility="{Binding IsMinButton,RelativeSource={RelativeSource AncestorType={x:Type Window}},Converter={StaticResource BoolAsVisiable}}" Style="{DynamicResource PathButtonStyle}">
                                            <Path Data="{DynamicResource pathMin}" Height="1" Width="8" Fill="#323232" Stretch="Uniform"></Path>
                                        </Button>
                                        <toggle:ToggleExtend x:Name="btnMax" Width="20" Height="20" Margin="5,0" Visibility="{Binding IsMaxButton,RelativeSource={RelativeSource AncestorType={x:Type window:BaseWindow}},Converter={StaticResource BoolAsVisiable}}">
                                            <toggle:ToggleExtend.Content>
                                                <Path Data="{DynamicResource pathMax}" Width="8" Height="8" Fill="#323232" Stretch="Uniform"></Path>
                                            </toggle:ToggleExtend.Content>
                                            <toggle:ToggleExtend.PressedContent>
                                                <Path Data="{DynamicResource pathReduction}" Width="8" Height="8" Fill="#323232" Stretch="Uniform"></Path>
                                            </toggle:ToggleExtend.PressedContent>
                                        </toggle:ToggleExtend>
                                        <Button x:Name="btnClose" Margin="5,0,0,0" Style="{DynamicResource PathButtonStyle}">
                                            <Path Data="{DynamicResource pathClose}" Width="8" Height="8" Stroke="#323232" StrokeThickness="1" Fill="#323232" Stretch="Uniform"></Path>
                                        </Button>
                                    </StackPanel>

                                    <AdornerDecorator>
                                        <ContentPresenter />
                                    </AdornerDecorator>

                                </Grid>
                            </Border>
                        </Grid>

                        <!--  窗体拖拽缩放  -->
                        <Rectangle x:Name="topRec"
                       Height="10"
                       Margin="10,0,10,0"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Top"
                       Visibility="{Binding IsResize,Converter={StaticResource BoolAsVisiable},RelativeSource={RelativeSource AncestorType=window:BaseWindow}}"
                       Fill="Transparent" />
                        <Rectangle x:Name="botRec"
                       Height="10"
                       Margin="10,0,10,0"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Bottom"
                       Visibility="{Binding IsResize,Converter={StaticResource BoolAsVisiable},RelativeSource={RelativeSource AncestorType=window:BaseWindow}}"
                       Fill="Transparent" />
                        <Rectangle x:Name="leftRec"
                       Width="10"
                       Margin="0,10,0,10"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Stretch"
                       Visibility="{Binding IsResize,Converter={StaticResource BoolAsVisiable},RelativeSource={RelativeSource AncestorType=window:BaseWindow}}"
                       Fill="Transparent" />
                        <Rectangle x:Name="rightRec"
                       Width="10"
                       Margin="0,10,0,10"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Stretch"
                       Visibility="{Binding IsResize,Converter={StaticResource BoolAsVisiable},RelativeSource={RelativeSource AncestorType=window:BaseWindow}}"
                       Fill="Transparent" />
                        <Rectangle x:Name="nwseUpRec"
                       Width="10"
                       Height="10"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Visibility="{Binding IsResize,Converter={StaticResource BoolAsVisiable},RelativeSource={RelativeSource AncestorType=window:BaseWindow}}"
                       Fill="Transparent" />
                        <Rectangle x:Name="neswUpRec"
                       Width="10"
                       Height="10"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Visibility="{Binding IsResize,Converter={StaticResource BoolAsVisiable},RelativeSource={RelativeSource AncestorType=window:BaseWindow}}"
                       Fill="Transparent" />
                        <Rectangle x:Name="neswDownRec"
                       Width="10"
                       Height="10"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"
                       Visibility="{Binding IsResize,Converter={StaticResource BoolAsVisiable},RelativeSource={RelativeSource AncestorType=window:BaseWindow}}"
                       Fill="Transparent" />
                        <Rectangle x:Name="nwseDownRec"
                       Width="10"
                       Height="10"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Visibility="{Binding IsResize,Converter={StaticResource BoolAsVisiable},RelativeSource={RelativeSource AncestorType=window:BaseWindow}}"
                       Fill="Transparent" />

                    </Grid>

