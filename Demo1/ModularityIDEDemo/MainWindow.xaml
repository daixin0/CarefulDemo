<lib:BaseWindow x:Class="ModularityIDEDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lib="clr-namespace:Careful.Controls.WindowBaseControl;assembly=Careful.Controls"
        xmlns:docker="clr-namespace:Careful.Controls.CarefulDockControl;assembly=Careful.Controls"
        xmlns:propertyGrid="clr-namespace:Careful.Controls.PropertyGridControl;assembly=Careful.Controls"
        xmlns:local="clr-namespace:ModularityIDEDemo" xmlns:layout="clr-namespace:Careful.Controls.CarefulDockControl.Layout;assembly=Careful.Controls"
        mc:Ignorable="d" x:Name="window" IsResize="True"
        Title="流程设计器" Height="450" Width="800">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="10,5,0,0" Text="{Binding Path=Title,ElementName=window}"></TextBlock>
        <Menu Grid.Row="1">
            <MenuItem Header="流程">
                <MenuItem Header="新建"></MenuItem>
                <MenuItem Header="保存"></MenuItem>
            </MenuItem>
            <MenuItem Header="调试"></MenuItem>
        </Menu>
        <Grid Grid.Row="3">
            <docker:DockingManager x:Name="dockManager">
                <layout:LayoutRoot>
                    <layout:LayoutPanel Orientation="Horizontal">
                        <layout:LayoutAnchorablePane DockWidth="220">
                            <layout:LayoutAnchorable Title="工作流"
                            CanClose="False"
                            CanHide="False">
                            </layout:LayoutAnchorable>
                        </layout:LayoutAnchorablePane>
                        <layout:LayoutDocumentPaneGroup>
                            <layout:LayoutDocumentPane x:Name="LayoutDocumentPane">
                                <layout:LayoutDocument
                                Title="Document 1"
                                ContentId="document1">
                                    <Grid>
                                        
                                    </Grid>
                                </layout:LayoutDocument>
                                <layout:LayoutDocument Title="Document 2" ContentId="document2">
                                    <Button x:Name="btn"></Button>
                                </layout:LayoutDocument>
                            </layout:LayoutDocumentPane>
                        </layout:LayoutDocumentPaneGroup>
                        <layout:LayoutAnchorablePaneGroup DockWidth="220" Orientation="Vertical">
                            <layout:LayoutAnchorablePane>
                                <layout:LayoutAnchorable Title="活动库" CanClose="False" CanHide="False">

                                </layout:LayoutAnchorable>
                            </layout:LayoutAnchorablePane>
                            <layout:LayoutAnchorablePane>
                                <layout:LayoutAnchorable Title="属性" CanClose="False" CanHide="False">
                                    <propertyGrid:PropertyGrid Instance="{Binding ElementName=btn}"></propertyGrid:PropertyGrid>
                                </layout:LayoutAnchorable>
                            </layout:LayoutAnchorablePane>
                        </layout:LayoutAnchorablePaneGroup>
                    </layout:LayoutPanel>
                </layout:LayoutRoot>
            </docker:DockingManager>
        </Grid>
    </Grid>
</lib:BaseWindow>
